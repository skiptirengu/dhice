<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/progress_bar" />

        <LinearLayout
            android:id="@+id/layout_character_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_layout_character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="false">

                <EditText
                    android:id="@+id/character_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/character_name"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_layout_character_race"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="false">

                <EditText
                    android:id="@+id/character_race"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/character_race"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:id="@+id/character_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_mostly_use"
                    android:textSize="@dimen/input_label" />

                <RadioButton
                    android:id="@+id/character_use_spells"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/magic_spells" />

                <RadioButton
                    android:id="@+id/character_use_attacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weapon_attacks" />
            </RadioGroup>

            <include layout="@layout/character_bonus" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/save_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="16dp"
                android:text="@string/save"
                android:textColor="@color/primaryTextColor"
                app:backgroundTint="@color/secondaryColor" />

        </LinearLayout>
    </FrameLayout>
</ScrollView>